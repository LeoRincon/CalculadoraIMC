<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/calculadora_imc"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="42dp"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginEnd="-100dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@mipmap/icon_imc"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:contentDescription="@string/todo"
        android:onClick="Login2"
        app:layout_constraintStart_toStartOf="@+id/altura"
        app:srcCompat="@mipmap/icon_logout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="@string/ingrese_los_datos"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginEnd="-170dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/altura"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="42dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/labelPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/peso"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="28dp" />

        <EditText
            android:id="@+id/editTextPeso"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:autofillHints="int"
            android:background="@drawable/edittex_border"
            android:ems="10"
            android:hint="@string/_84"
            android:inputType="number"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="252dp" />

        <TextView
            android:id="@+id/wardingpeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/en_kilogramos"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints,SmallSp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="28dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:orientation="vertical"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginEnd="-190dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:ignore="MissingConstraints,RtlSymmetry"
        tools:layout_editor_absoluteX="64dp">

        <TextView
            android:id="@+id/labelAlrura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/altura"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="28dp" />

        <EditText
            android:id="@+id/editTextAltura"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:autofillHints="int"
            android:background="@drawable/edittex_border"
            android:ems="10"
            android:hint="@string/_184"
            android:inputType="number"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="252dp" />

        <TextView
            android:id="@+id/wardingAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/en_centimetros"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints,SmallSp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="28dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-360dp"
        android:background="@drawable/rounded_button"
        android:text="@string/calcular"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="-105dp"
        android:text="@string/resultado"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:paddingStart="16dp"
        android:text="@string/su_imc_es_17_4_lo_que_indica_que_su_peso_esta_en_la_categor_a_de_bajo_peso_para_adultos_de_su_estatura"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/button"
        tools:ignore="MissingConstraints,RtlSymmetry"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resultText"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="@string/guardar"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="251dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonHistory"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:onClick="History"
            android:text="@string/ver_historial"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="251dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="-180dp"
        android:text="@string/tabla_de_referencias"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <!-- Fila 1 -->
        <TableRow android:background="@color/blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/rango_de_imc"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/clasificaci_n"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/_16_5_kg_m2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/bajo_peso_severo" />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow android:background="@color/blue_light">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/_16_5_18_5_kg_m2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/bajo_peso" />
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/_18_5_25_kg_m2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/peso_normal" />
        </TableRow>

        <!-- Fila 5 -->
        <TableRow android:background="@color/blue_light">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/_25_30_kg_m2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/sobre_peso" />
        </TableRow>

        <!-- Fila 6 -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/_30_35_kg_m2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/obesidad_tipo_1" />
        </TableRow>

        <!-- Fila 7 -->
        <TableRow android:background="@color/blue_light">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/_35_40_kg_m2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/obesidad_tipo_2" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>